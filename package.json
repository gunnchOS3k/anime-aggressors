{
  "name": "anime-aggressors",
  "version": "1.0.0",
  "description": "Shōnen-style PvP arena brawler with optional Edge-IO wearables. Features rollback netcode, gesture-driven combat, and cross-platform builds (web/mobile/desktop).",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "preview": "pnpm --filter web preview",
    "deploy": "pnpm build && gh-pages -d apps/web/dist",
    "readme:scan": "node packages/readme-kit/bin/scan.mjs",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "gh-pages": "^6.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "fighting-game",
    "anime",
    "pvp",
    "rollback-netcode",
    "edge-io",
    "gesture-control",
    "cross-platform",
    "web",
    "mobile",
    "desktop"
  ],
  "author": "gunnchOS3k",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gunnchOS3k/anime-aggressors.git"
  },
  "homepage": "https://gunnchOS3k.github.io/anime-aggressors"
}